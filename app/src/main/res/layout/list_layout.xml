<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/search_bar_in_memo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/default_margin"
        android:inputType="text"
        android:textSize="@dimen/text_size_15sp" />

    <Button
        android:id="@+id/btn_add_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar_in_memo_list"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/create_new"
        android:textSize="@dimen/text_size_15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_in_list"
        android:layout_alignParentBottom="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/list_in_scroll_view_for_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:gravity="top"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/list_in_scroll_view_for_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:gravity="top"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>